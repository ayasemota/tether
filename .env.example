# Database Configuration
DATABASE_URL=mongodb://localhost:27017/tether
DB_NAME=tether

# Firebase Configuration
# Get your Firebase Web API Key from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your_firebase_web_api_key_here

# Path to your Firebase service account credentials JSON file
# Download from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Email Verification (Optional)
# URL to redirect users after successful email verification
# If not set, a default success page will be shown
# EMAIL_VERIFICATION_SUCCESS_URL=http://localhost:3000/verification-success

